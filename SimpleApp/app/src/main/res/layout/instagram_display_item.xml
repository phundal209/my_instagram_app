<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/headerBarOfImage">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            tools:src="@mipmap/ic_launcher"
            android:id="@+id/userAvatar"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="paul_hundal"
            android:id="@+id/mediaPostedBy"
            android:layout_toRightOf="@+id/userAvatar"
            android:layout_toEndOf="@+id/userAvatar"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberOfLikes"
            tools:text="60 likes"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>

        <com.like.LikeButton
            app:icon_type="heart"
            app:icon_size="16dp"
            android:id="@+id/likedButton"
            android:layout_marginTop="-12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="78dp"
            android:layout_marginEnd="78dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:id="@+id/instagramImageToDisplayOnFeed"
            tools:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:layout_below="@+id/userAvatar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>